load("//antlir/antlir2/bzl/feature:defs.bzl", "feature")
load("//antlir/bzl:third_party.bzl", "third_party")

oncall("antlir")

third_party.build(
    name = "qemu",
    src = third_party.source("qemu"),
    compatible_with = [
        "//antlir/antlir2/os:centos8",
        "//antlir/antlir2/os:centos9",
    ],
    features = [
        feature.rpms_install(rpms = [
            # build deps
            "autoconf",
            "autoconf-archive",
            "bzip2",
            "diffutils",
            "expect",
            "gcc",
            "glib2-static",
            "libattr-devel",
            "libcap-ng-devel",
            "libseccomp-devel",
            "libtool",
            "libzstd-devel",
            "make",
            "net-tools",
            "ninja-build",
            "numactl-devel",
            "openssl-devel",
            "pixman-devel",
            "python39",
            "sed",
            "socat",
            "tpm-tools",
        ]),
        feature.rpms_install(
            subjects = select({
                "//antlir/antlir2/os:centos8": ["sphinx"],
                "//antlir/antlir2/os:centos9": [
                    "python3-sphinx",
                    "python3-sphinx_rtd_theme",
                ],
            }),
        ),
    ],
    script = third_party.script(
        build = "make",
        install = "make install",
        prepare = """
export MAKEFLAGS=-j

./configure \\
    --target-list=x86_64-softmmu,aarch64-softmmu \\
    --prefix="${OUTPUT}" \\
    --without-default-features \\
    --disable-download \\
    --enable-attr \\
    --enable-avx2 \\
    --enable-cap-ng \\
    --enable-kvm \\
    --enable-numa \\
    --enable-seccomp \\
    --enable-tools \\
    --enable-tpm \\
    --enable-vhost-kernel \\
    --enable-vhost-net \\
    --enable-vhost-user \\
    --enable-virtfs \\
    --enable-zstd
        """,
    ),
    visibility = [
        "//antlir/third-party/...",
        "//antlir/vm/...",
        "//third-party/antlir/...",
    ],
)
