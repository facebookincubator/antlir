load("//antlir/bzl:third_party.bzl", "third_party")
load("//antlir/bzl/image/feature:defs.bzl", "feature")

oncall("antlir")

third_party.build(
    name = "qemu",
    src = third_party.source("qemu"),
    features = [
        feature.rpms_install([
            # build deps
            "autoconf",
            "autoconf-archive",
            "expect",
            "gcc",
            "glib2-static",
            "libattr-devel",
            "libcap-ng-devel",
            "libseccomp-devel",
            "libtool",
            "libzstd-devel",
            "make",
            "net-tools",
            "ninja-build",
            "numactl-devel",
            "openssl-devel",
            "pixman-devel",
            "python39",
            "sed",
            "socat",
            "sphinx",
            "tpm-tools",
        ]),
    ],
    script = third_party.script(
        build = "make",
        install = "make install",
        prepare = """
export MAKEFLAGS=-j

./configure \\
    --target-list=x86_64-softmmu,aarch64-softmmu \\
    --prefix="${OUTPUT}" \\
    --without-default-features \\
    --disable-download \\
    --enable-attr \\
    --enable-avx2 \\
    --enable-cap-ng \\
    --enable-kvm \\
    --enable-numa \\
    --enable-seccomp \\
    --enable-tools \\
    --enable-tpm \\
    --enable-vhost-kernel \\
    --enable-vhost-net \\
    --enable-vhost-user \\
    --enable-virtfs \\
    --enable-zstd
        """,
    ),
    visibility = ["//antlir/vm/..."],
)
