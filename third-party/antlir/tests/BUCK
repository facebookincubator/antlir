load("//antlir/bzl:build_defs.bzl", "buck_genrule", "export_file")
load(":defs.bzl", "hello_world_build_test")

oncall("antlir")

[export_file(name = name) for name in [
    "hello_world.c",
    "00_patch",
    "01_patch",
]]

buck_genrule(
    name = "hello_world.tgz",
    out = "hello_world.tgz",
    cmd = """
        OUT_DIR=\\$(dirname $OUT)
        mkdir -p "$OUT_DIR/hello_world"
        cp "$(location {})" "$OUT_DIR/hello_world/"
        tar -czf "$OUT" -C "$OUT_DIR" hello_world/hello_world.c
        rm -rf hello_world/
    """.format(":hello_world.c"),
)

hello_world_build_test(
    msg = "Hello World!",
    ver = "default",
)

hello_world_build_test(
    msg = "Check Your Head!",
    patches = [
        ":00_patch",
        ":01_patch",
    ],
    ver = "patched",
)
