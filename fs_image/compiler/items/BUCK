# Needs dedicated test coverage. For now, is covered by `test-items`.
python_library(
    name = "common",
    srcs = ["common.py"],
    deps = [
        "//fs_image:fs_utils",
        "//fs_image:subvol_utils",
        "//fs_image/compiler:procfs_serde",
        "//fs_image/rpm:yum_dnf_conf",
    ],
)

# A helper for tests, so lacks its own tests.
