{% extends "antlir/bzl/linux/systemd/unit:unit.jinja2" %}

{% block settings %}
[Service]
Type={{ type }}
{% if slice %}
Slice={{ slice }}
{% endif %}
{% if environment_file %}
EnvironmentFile={{ environment_file }}
{% endif %}
{% for cmd in exec_start %}
ExecStart={{ cmd }}
{% endfor %}
{% if timeout_start %}
TimeoutStartSec={{ timeout_start }}
{% endif %}
{% if restart %}
Restart={{ restart }}
{% endif %}
{% if restart_sec %}
RestartSec={{ restart_sec }}
{% endif %}
TimeoutStopSec=90s
{% for key, val in environment.items() %}
Environment={{ key }}={{ val }}
{% endfor %}
{% if standard_output %}
StandardOutput={{ standard_output }}
{% endif %}
{% if start_limit_interval_sec %}
StartLimitIntervalSec={{ start_limit_interval_sec }}
{% endif %}
{% if start_limit_burst %}
StartLimitBurst={{ start_limit_burst }}
{% endif %}
{% endblock %}
