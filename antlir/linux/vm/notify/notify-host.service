[Unit]
Description=Send a notification that the machine has booted
After=sshd.service systemd-networkd-wait-online.service
Requires=sshd.service
ConditionPathExists=/dev/virtio-ports/notify-host

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/echo READY
StandardOutput=file:/dev/virtio-ports/notify-host
