load("//antlir/bzl:build_defs.bzl", "alias")
load("//antlir/distro/deps:rpm_library.bzl", "rpm_library")

oncall("antlir")

rpm_library(
    name = "crypto",
    rpm = "openssl-devel",
    visibility = ["PUBLIC"],
)

rpm_library(
    name = "ssl",
    rpm = "openssl-devel",
    visibility = ["PUBLIC"],
)

# These '*Android' deps are totally useless since CentOS has nothing to do with
# Android, but it breaks some 'buck2 uquery's and janky macros that append
# platform suffixes like this
alias(
    name = "cryptoAndroid",
    actual = ":crypto",
    visibility = ["PUBLIC"],
)

alias(
    name = "sslAndroid",
    actual = ":ssl",
    visibility = ["PUBLIC"],
)
