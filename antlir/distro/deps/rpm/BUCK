load("//antlir/distro/deps:rpm_library.bzl", "rpm_library")

oncall("antlir")

rpm_library(
    # Existing third-party copies of rpm are named 'librpm', so to be consistent
    # we use 'rpm-devel' but name it 'librpm'
    name = "librpm",
    rpm = "rpm-devel",
    visibility = ["PUBLIC"],
    exported_deps = [
        "//antlir/distro/deps/db:db",
        "//antlir/distro/deps/file:magic",
        "//antlir/distro/deps/libarchive:libarchive",
        "//antlir/distro/deps/openssl:crypto",
        "//antlir/distro/deps/openssl:ssl",
        "//antlir/distro/deps/popt:popt",
        "//antlir/distro/deps/sqlite:sqlite",
    ],
)
