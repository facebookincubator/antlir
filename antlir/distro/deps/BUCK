# @oss-disable
load("//antlir/antlir2/bzl/feature:defs.bzl", "feature")
load("//antlir/antlir2/bzl/image:defs.bzl", "image")
load("//antlir/bzl:build_defs.bzl", "export_file", "python_binary", "rust_binary")
load(":unavailable.bzl", "unavailable")

oncall("antlir")

image.layer(
    name = "base",
    features = [
        feature.rpms_install(rpms = [
            "glibc-devel",  # undeclared dep of a lot of libraries
            "rpm",
        ]),
    ],
    rootless = True,
    visibility = ["PUBLIC"],
)

rust_binary(
    name = "projects",
    srcs = ["projects.rs"],
    # @oss-disable
    test_srcs = ["projects.bzl"],
    deps = [
        "anyhow",
        "serde",
        "serde_json",
        "serde_starlark",
        "//antlir/signedsource:signedsource",
    ],
)

# Generic fallthrough library when antlir doesn't know about a dependency
unavailable(
    name = "unknown",
)

export_file(
    name = "test-deps-binary",
)

python_binary(
    name = "rpm-library-action",
    srcs = ["rpm_library_action.py"],
    main_function = "antlir.distro.deps.rpm_library_action.main",
)
