load("//antlir/distro/deps:rpm_library.bzl", "rpm_library")

oncall("antlir")

rpm_library(
    name = "ncursesw",
    # TODO(T213442795): hardcoding this version is gross but antlir doesn't
    # understand ld scripts
    lib = "ncursesw.so.6",
    rpm = "ncurses-devel",
    visibility = ["PUBLIC"],
)

rpm_library(
    name = "panelw",
    rpm = "ncurses-devel",
    visibility = ["PUBLIC"],
)

rpm_library(
    name = "tinfo",
    rpm = "ncurses-devel",
    visibility = ["PUBLIC"],
)
