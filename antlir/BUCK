btrfsutil_deps = [
    ":common",
    ":fs_utils",
    ":unshare",
    third_party.library(
        "python-btrfs-progs",
        "btrfsutil-py",
    ),
]

python_library(
    name = "btrfsutil",
    srcs = [
        "btrfsutil.py",
    ],
    labels = ["uses_sudo"],
    resources = {
        ":btrfsutil-bin": "btrfsutil-bin",
    },
    type_stubs = [
        "btrfsutil.pyi",
    ],
    deps = btrfsutil_deps,
)

# the btrfsutil wrapper is also packaged as a python_binary so that it can be
# fallen back to with `sudo` in the case of permissions errors in the main
# calling process
python_binary(
    name = "btrfsutil-bin",
    srcs = ["btrfsutil.py"],
    main_function = "antlir.btrfsutil.main",
    visibility = ["//antlir:btrfsutil"],
    deps = btrfsutil_deps,
)

