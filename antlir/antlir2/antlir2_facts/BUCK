        "static_assertions",
        "thiserror",
        "tracing",
        "typed-builder",
        "typetag",
        ":antlir2_facts_macro",
        "//antlir/antlir2/antlir2_isolate:antlir2_isolate",
        "//antlir/antlir2/antlir2_path:antlir2_path",
        "//antlir/antlir2/antlir2_systemd:antlir2_systemd",
        "//antlir/antlir2/antlir2_users:antlir2_users",
    ],
)

