load("//antlir/bzl:build_defs.bzl", "rust_library")

oncall("antlir")

rust_library(
    name = "json_arg",
    srcs = glob(["src/*.rs"]),
    autocargo = {
        "cargo_toml_config": {
            "package": {
                "description": "Easily parse structured CLI args",
                "license": "MIT",
                "repository": "https://github.com/facebookincubator/antlir/tree/main/antlir/util/cli/json_arg",
                "version": "0.2.1",
            },
        },
    },
    test_deps = [
        "clap-3",
        "similar-asserts",
        "tempfile",
    ],
    visibility = ["PUBLIC"],
    deps = [
        "serde",
        "serde_json",
        "toml",
    ],
)
